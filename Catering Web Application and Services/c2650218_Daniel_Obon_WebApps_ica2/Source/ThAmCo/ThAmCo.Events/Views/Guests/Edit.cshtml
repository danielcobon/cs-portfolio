@model ThAmCo.Events.Models.EditGuestViewModel;

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Guest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <input type="hidden" asp-for="GuestId" /> 
            <div class="form-group">
                <label asp-for="GuestName" class="control-label"></label>
                <input asp-for="GuestName" class="form-control" />
                <span asp-validation-for="GuestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestPhone" class="control-label"></label>
                <input asp-for="GuestPhone" class="form-control" />
                <span asp-validation-for="GuestPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestEmail" class="control-label"></label>
                <input asp-for="GuestEmail" class="form-control" />
                <span asp-validation-for="GuestEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance" class="control-label"></label>
                <select asp-for="Attendance" asp-items="Html.GetEnumSelectList<AttendanceStatus>()" class="form-control"></select>
                <span asp-validation-for="Attendance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
