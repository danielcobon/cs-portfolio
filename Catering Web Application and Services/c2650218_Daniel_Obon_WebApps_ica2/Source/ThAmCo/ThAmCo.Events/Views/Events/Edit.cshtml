@model ThAmCo.Events.Domain.Event

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="EventId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GuestBookings[0].GuestId" class="control-label"></label>
                @if (Model.GuestBookings != null && Model.GuestBookings.Any())
                {
                    <select asp-for="GuestBookings[0].GuestId" asp-items="@ViewBag.Guests" class="form-control">
                        <option value="">Please Select a Guest</option>
                    </select>
                }
                else
                {
                    <span>No GuestBookings available</span>
                }
                <span asp-validation-for="GuestBookings[0].GuestId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventTitle" class="control-label"></label>
                <input asp-for="EventTitle" class="form-control" />
                <span asp-validation-for="EventTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventDate" class="control-label"></label>
                <input asp-for="EventDate" class="form-control" />
                <span asp-validation-for="EventDate" class="text-danger"></span>
            </div>

            <!-- Add dropdown list for event types -->
            <div class="form-group">
                <label asp-for="EventTypeId" class="control-label"></label>
                <select asp-for="EventTypeId" asp-items="@ViewBag.EventTypes" class="form-control">
                    <option value="">Please Select a Type</option>
                </select>
                <span asp-validation-for="EventTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
